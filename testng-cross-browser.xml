
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Cross Browser Test Suite" verbose="1" parallel="tests" thread-count="2">
    
    <!-- Chrome Tests -->
    <test name="Chrome Browser - Smoke Tests">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.qa.swaglabs.tests.LoginTest"/>
            <class name="com.qa.swaglabs.tests.CheckoutTest"/>
        </classes>
    </test>
    
    <!-- Firefox Tests -->
    <test name="Firefox Browser - Smoke Tests">
        <parameter name="browser" value="firefox"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.qa.swaglabs.tests.LoginTest"/>
            <class name="com.qa.swaglabs.tests.CheckoutTest"/>
        </classes>
    </test>
    
</suite>